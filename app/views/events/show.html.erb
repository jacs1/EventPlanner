<div class="row">
	<div class="span6 offset3">
			<div class="show-event">
				<div class="well">
				<%= image_tag @event.image %>
			<p>
			  <b>Description:</b>
			  <%= @event.description %>
			</p>
			<% if current_user == @event.user %>
			  <%= link_to 'Edit', edit_event_path(@event) %> |
				<%= link_to 'Back', events_path %>
			<% end %>
			</div>
		</div>
	</div>
</div>