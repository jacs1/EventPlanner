
<div class="box">
<%= link_to (image_tag event.image(:medium)), event %>
<p class="description">
	<%= event.name %>
  <%= event.description %>
  <%= event.address %>
  <%= event.latitude %>
  <%= event.longitude %>
  <p class="username">
		Event Host: <%= link_to event.user.email, event.user %>
	</p>
</p>

<p>
	<%= link_to 'Remove', event, method: :delete, data: { confirm: 'Are you sure you want to delete this event?' } %>
</p>
	
</div>