<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  <ul>
  	<%= f.input :name %>
  	<%= f.input :address %>
    <%= f.input :description, as: :text, input_html: { rows: '3'} %>
    <%= f.input :image, label: 'Upload an Image' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>